{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./app/ui/src/*"],
      "@/components/*": ["./app/ui/components/*"],
      "@/store/*": ["./app/ui/store/*"],
      "@/public/*": ["./app/ui/public/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "app/ui/**/*.ts",
    "app/ui/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
